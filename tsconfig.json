{
  "compilerOptions": {
    "target": "ES2019",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
    "benchmarks" ]
}